<ul class="list-unstyled">
  {{#each this}}
    {{#if_eq ../name this.name}}
      {{else}}
      <li>
        <a href="/{{ path }}"
           class="audio-button"
           data-audio-filepath="{{ filepath  }}"
           data-name="{{ name }}"
           data-contents="{{ innerContent }}"
           data-tags="{{#each tags}}{{ name }}|{{ slug }},{{/each}}"
           >{{ name }}</a>
        <ul class="color-bar">
          {{#each tags}}
            <li class="{{slug}}">
              <a href="/tracks/tagged/{{ slug }}"></a>
            </li>
          {{/each}}
        </ul>
      </li>
    {{/if_eq}}
  {{/each}}
</ul>
      </li>
      {{else}}
      <li>
        <a href="/{{ path }}">{{ title }}</a>
      </li>
      {{/if_eq}}
    {{/each}}
  </ul>
  <h6>Components</h6>
  <ul class="list-unstyled">
    {{#each components}}
